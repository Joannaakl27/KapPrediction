<div class="container my-5">
  <style>
    body {
      background-color: hsl(0, 0%, 95%);
    }
  </style>
  <div class="row d-flex justify-content-center">
    <div class="col-lg-9">
      <div class="card shadow-4 rounded-5 overflow-hidden" >
        <%= image_tag("vessel-visit.jpg", alt: "vessel-visit-kap") %>
        <div class="card-body">
          <%= form_for @vessel_visit do |f| %>
            <div class="row mb-3 mt-3 d-flex justify-content-around">
              <div class="col-lg-4">
                <%= f.label :voyage_number, 'Voyage Number:' %>
                <%= f.text_field :voyage_number, as: :string, html5: true, label: 'Voyage Number', class: 'form-control mb-1', placeholder: 'Voyage Number' %>
                <%= f.label :service_id, 'Service ID:' %>
                <%= f.text_field :service_id, as: :string, html5: true, label: 'Service ID', class: 'form-control mb-1', placeholder: 'e.g.: JAD' %>
                <%= f.label :vessel_id, 'Vessel ID:' %>
                <%= f.text_field :vessel_id, as: :string, html5: true, label: 'Vessel ID', class: 'form-control mb-1', placeholder: 'Vessel ID' %>
                <%= f.label :vessel_length, 'Vessel Length (m):' %>
                <%= f.number_field :vessel_length, step: :any,as: :float, html5: true, label: 'Vessel Length', class: 'form-control mb-1', placeholder: 'e.g.: 300.0' %>
                <%= f.label :total_container_moves, 'Total Container Move Count:' %>
                <%= f.number_field :total_container_moves, as: :integer, html5: true, label: 'Total Container Move Count', class: 'form-control', placeholder: 'e.g.: 1783' %>
              </div>
              <div class="col-lg-4">
                <%= f.label :discharge_container_move_ratio, 'Discharge Container Moves:' %>
                <%= f.number_field :discharge_container_move_ratio, step: :any , as: :float, html5: true, label: 'Discharge Container Moves', class: 'form-control mb-1', placeholder: 'e.g.: 756' %>
                <%= f.label :crane_intensity, 'Planned Crane Intensity:' %>
                <%= f.number_field :crane_intensity, step: :any , as: :float, html5: true, label: 'Planned Crane Intensity', class: 'form-control mb-1', placeholder: 'e.g.: 4.2' %>
                <%= f.label :berth_occupancy, 'Berth Occupancy (%):' %>
                <%= f.number_field :berth_occupancy, step: :any , as: :float, html5: true, label: 'Berth Occupancy', class: 'form-control mb-1', placeholder: 'e.g.: 65' %>
                <%= f.label :yard_occupancy, 'Yard Occupancy (%):' %>
                <%= f.number_field :yard_occupancy, step: :any, as: :float, html5: true, label: 'Yard Occupancy', class: 'form-control', placeholder: 'e.g.: 70' %>
                <%= f.submit 'Update', class: 'btn btn-primary btn-block mt-4' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
